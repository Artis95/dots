#!/bin/bash

res=$(echo "toggle-play;next;prev;window;start" | rofi -sep ";" -dmenu -p "spotify-action:" -color-window "#151515, #2E7D32, #2E7D32" -color-normal "#151515, #ffffff, #151515, #151515, #2E7D32" -color-active "#151515, #006064, #151515, #151515, #fdf6e3" -color-urgent "#fdf6e3, #dc322f, #eee8d5, #dc322f, #fdf6e3" -font "gohufont 11" -bw 4  -line-margin 2 -lines 5 -width 400 -fuzzy -no-fixed-num-lines -location 7 -separator-style "none" -hide-scrollbar -no-show-match
)

if [ $res = "toggle-play" ]; then
    nuvolaplayer3ctl  -a spotify action toggle-play
fi
if [ $res = "next" ]; then
    nuvolaplayer3ctl  -a spotify action next-song
fi
if [ $res = "prev" ]; then
    nuvolaplayer3ctl  -a spotify action prev-song
fi
if [ $res = "window" ]; then
    nuvolaplayer3ctl -a spotify action activate
fi
if [ $res = "start" ]; then
  nuvolaplayer3 -a spotify
fi
exit 0
